{
	"compilerOptions": {
		"rootDir": ".",
		"target": "es2017",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["dom", "esnext", "dom.iterable"],
		"strict": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
  "exclude": ["**/dist", "**/examples"]
}
