{
	"compilerOptions": {
		"rootDir": ".",
		"target": "es5",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["dom", "es2017", "dom.iterable"],
		"allowJs": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
  "include": ["./src"],
}
